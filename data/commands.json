[{
  "command_name": "g++",
  "categories": {
    "C++ Version": {
      "widget_type": "radio_button",
      "options": ["--std=c++98", "--std=c++11", "--std=c++20"],
      "description": ["Use c++98", "Use c++11", "Use c++20"]
    },
    "Inputs": {
      "widget_type": "text",
      "description": "The name of src files"
    },
    "Output": {
      "argument": "-o",
      "widget_type": "text",
      "description": "The name of the executable"
    },
    "Optimization": {
      "widget_type": "radio_button",
      "options": [" ", "-O1", "-O2", "-O3"],
      "description": ["Optimize", "Optimize", "Optimize"]
    },
    "Warnings": {
      "widget_type": "checkbox",
      "options": ["-Werror", "-Wall"],
      "description": ["Make all warnings into errors", "Show all warnings"]
    }
  }
},
{
  "command_name": "grep",
  "categories": {
   
    "A": {
      "argument": "-A",
      "widget_type": "text",
      "description": " a number of lines to display after a match"
    },

    "B": {
      "argument": "-B",
      "widget_type": "text",
      "description": " a number of lines to display before a match"
    },

    "Other flags": {
      "widget_type": "checkbox",
      "options": ["-n", "-i"],
      "description": ["Show line number", "Ignore case"]
    },

    "Patten": {
      "widget_type": "text",
      "description": "The patten"
    },
    "Input File": {
      "widget_type": "text",
      "description": "The input filename"
    }

  }
},
{
  "command_name": "ls",
  "categories": {
    "Flags": {
      "widget_type": "checkbox",
      "options": ["-A", "-l"],
      "description": ["List all entries except for . and ...  Always set for the super-user.", "List in long format."]
    }
  }
},

{
  "command_name": "cat",
  "categories": {
    "Flags": {
      "widget_type": "checkbox",
      "options": ["-e", "-b"],
      "description": ["Display dollar sign at the end of each line", "Number the non-blank output lines, starting at 1."]
    },
    "Output": {
      "widget_type": "text",
      "description": "The input filename"
    }
  }
}




